{{#partial "contenido" }}

    <div class="mt-5 pt-2">
        <article class="col-lg-4 mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Modificar perfil</h4>

            <form action="/actualizarPerfil" method="POST">
                <fieldset>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <input name="inputNombre" class="form-control" placeholder="Nombre completo" type="text">
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                        </div>
                        <input name="inputEmail" class="form-control" placeholder="Correo electronico" type="email">
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input name="inputContrasenia" class="form-control" placeholder="Crear contrasenia" type="password">
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input name="inputRepeticionContrasenia" class="form-control" placeholder="Repetir contrasenia" type="password">
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Guardar </button>
                    </div> <!-- form-group// -->
                </fieldset>
            </form>

        </article>
    </div>

{{/partial}}

