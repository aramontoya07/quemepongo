{{#partial "contenido" }}
    <div class="container">

        <div class="mt-4 pt-4 d-none d-md-flex col-md-4 col-lg-12 d-flex justify-content-start justify-content-center">
            <h1 class="login-heading font-weight-light text-lg-left mt-4 mb-0">Detalle evento {{asistencia.evento.id}}</h1>
        </div>

        <hr class="mt-2 mb-5" />

        <div class="row">
            <div class="col md-6">
                <div class="text-center text-lg-left">
                    <div class="card border-primary mb-3">
                        <h3 class="card-header border-primary mb-4">Evento {{asistencia.evento.id}}</h3>
                        <br>
                        <div class="card-body border-primary">
                            <h5>{{asistencia.evento.fecha}}</h5>
                            <h5>{{asistencia.evento.tituloEvento}}</h5>
                            <h5>{{asistencia.evento.ubicacion}}</h5>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col md-6">

                <div id="carouselExampleFade" class="carousel slide carousel-fade card border-primary mb-4" data-ride="carousel">
                    <div class="carousel-inner">
                        {{#each atuendos}}
                        <div class="carousel-item active">
                            <div class="row justify-content-start justify-content-center">
                                <div class="col"><img src="{{superior.rutaImagen}}" class="card-img-top" alt="100"></div>
                                <div class="col"><img src="{{inferior.rutaImagen}}" class="card-img-top" alt="100"></div>
                                <div class="col"><img src="{{calzado.rutaImagen}}" class="card-img-top" alt="100"></div>
                                {{#each accesorios}}
                                <div class="col"><img src="{{rutaImagen}}" class="card-img-top" alt="..."></div>
                                {{/each}}
                                {{#each capasAbrigos}}
                                <div class="col"><img src="{{rutaImagen}}" class="card-img-top" alt="..."></div>
                                {{/each}}
                            </div>
                            <div class="row justify-content-start justify-content-center card-body">
                                <div class="col col-md-2">
                                    <form action="/misEventos/{{asistencia.evento.id}}/aceptarSugerencia" method="POST">
                                        <input type="hidden" name="idAtuendo" value={{id}}>
                                        <button type="submit" class="btn btn-success">Aceptar</button>
                                    </form>
                                </div>
                                <div class="col col-md-2">
                                    <form action="/misEventos/{{asistencia.evento.id}}/rechazarSugerencia" method="POST">
                                        <input type="hidden" name="idAtuendo" value={{id}}>
                                        <button type="submit" class="btn btn-danger">Rechazar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        {{/each}}

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}